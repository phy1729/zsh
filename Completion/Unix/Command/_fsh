#compdef fsh

_arguments -C \
  '(- : *)'{-h,--help}'[display help information]' \
  '(- : *)'{-V,--version}'[display version information]' \
  '-r[specify method]:method:(rsh ssh)' \
  '-l[specify login id]:login:_users' \
  '(-T --timeout)'{-T,--timeout}':idle timeout:' \
  ':remote host name:_hosts' \
  '*::: : _normal -p $service'
